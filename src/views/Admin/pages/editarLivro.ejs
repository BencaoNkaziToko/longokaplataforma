                               <!-- Botão para abrir o modal -->
                               <form action="/adm_update_livro" method="POST">
                                <div class="modal-header">
                                    <h5 class="modal-title text-dark text-center">Editar dados da Bibliografia</h5>
                                </div>
                                <div class="modal-body">
                                    <!-- Campos do Formulário -->
                                    <div class="form-group mb-2">
                                        <input type="text" name="idLivro" class="d-none" value="<%=livro[0].idMaterial %>">
                                        <label for="nomeInstituicao">Titulo</label>
                                        <input type="text" class="form-control"id="titulo" name="titulo" value="<%=livro[0].titulo %>" required>
                                    </div>
                                    <div class="form-group mb-2">
                                        <label for="sigla_acronomo">Autor</label>
                                        <input type="text" class="form-control" id="autor" name="autor" value="<%=livro[0].autor %>" required>
                                    </div>
                                    <div class="form-group mb-2">
                                        <label for="tipo">Categoria</label>
                                        <select class="form-control" id="categoria" name="categoria" required>
                                            <option value="<%=categorias[0].id %>"><%=categorias[0].nome %></option>
                                            <% categorias.forEach((categoria) => { %>
                                                <option value="<%=categoria.id %>"><%=categoria.nome %></option>
                                            <% }) %>
                                        </select>
                                    </div>
                                    <div class="modal-footer mb-3">
                                        <button type="submit" class="form-control btn btn-warning">Editar dados</button>
                                    </div>
                            </form>
                            <div class="modal-header">
                                <h5 class="modal-title text-dark text-center">Editar o arquivo da Bibliografia</h5>
                            </div>
