                                        <label for="sigla_acronomo">Carregar arquivo</label>
                                        <input class="form-control" type="file" id="userFile" name="userFile" placeholder="Carregue o ficheiro da grade Curricular"> 
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="submit" class="form-control btn btn-warning">Editar Grade</button>
                                </div>
