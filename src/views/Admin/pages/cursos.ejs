            <div class="modal-content">
                <form method="post" enctype="multipart/form-data" id="uploadForm" action="/admCadastrarCurso" method="POST">
                    <div class="modal-header">
                        <h5 class="modal-title text-dark text-center">Cadastrar novo Curso</h5>
                    </div>
                    <div class="modal-body">
                        <!-- Campos do Formulário -->
                        <div class="form-group mb-2">
                            <label for="nomeInstituicao">Nome</label>
                            <input type="text" class="form-control d-none" id="id" name="id" value="<%= instituicao[0].idInstituicao %>">
                        
                            <input type="text" class="form-control" id="curso" name="curso" placeholder="Insira o nome da instituição" required>
                        </div>
                        <div class="form-group mb-2">
                            <label for="sigla_acronomo">Duração</label>
                            <input type="number" class="form-control" id="sigla_acronomo" name="duracao" placeholder="Insira a duração do curso" required>
                        </div>
                        <div class="form-group mb-2">
                            <label for="sigla_acronomo">Grade Curricular</label>
                            <input class="form-control" type="file" id="userFile" name="userFile" placeholder="Carregue o ficheiro da grade Curricular"> 
                        </div>
                        
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Cadastrar</button>
                        <button type="button" class="btn btn-secondary" onclick="fecharModalCadastro()">Cancelar</button>
                        
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    
    
    <!-- Scripts -->
    <script>
        // Função para abrir o modal
        function abrirModalCadastro() {
            const modal = document.getElementById('modalCadastro');
            modal.style.display = 'flex';
        }
    
        // Função para fechar o modal
        function fecharModalCadastro() {
            const modal = document.getElementById('modalCadastro');
            modal.style.display = 'none';
        }
    </script>

    <script>
        // Abrir o modal e definir a ação do botão de confirmação
        function confirmarExclusao(id) {
            const modal = document.getElementById('confirmModal');
            const confirmarBtn = document.getElementById('confirmarBtn');
    
            // Configurar o botão de confirmação
            confirmarBtn.onclick = function () {
                const idI = document.getElementById("idInst").value;
                window.location.href = `/adm_eliminar_curso/${id}/${idI}`;
            };
            modal.style.display = 'block';
        }
    
        // Fechar o modal
        function fecharModal() {
            const modal = document.getElementById('confirmModal');
            modal.style.display = 'none';
        }
    
        // Estilização do modal (apenas para demonstração básica)
        document.addEventListener('DOMContentLoaded', function () {
            const modal = document.getElementById('confirmModal');
            modal.style.position = 'fixed';
            modal.style.top = '0';
            modal.style.left = '0';
            modal.style.width = '100%';
            modal.style.height = '100%';
            modal.style.backgroundColor = 'rgba(0, 0, 0, 0.5)';
            modal.style.display = 'none';
            modal.style.justifyContent = 'center';
            modal.style.alignItems = 'center';
        });
    </script>
