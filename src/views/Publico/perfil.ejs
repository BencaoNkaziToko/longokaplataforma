                            <div class="col-4 form-group">
                              <input type="text" name="nomeCurso" list="nomeCurso" class="searchText form-control" placeholder="Nome do curso..." autocomplete="on">
                            </div>
                            <div class="col-4 form-group mt-3 mt-md-0">
                              <select class="form-control" name="provincia" id="">
                                <option value="">Publica</option>
                                <option value="">Privada</option>
                              </select>
                            </div>
                          </div>
                          <div class="form-group col-8">
                            <select class="form-control" name="provincia" id="">
                              <option value="">Luanda</option>
                              <option value="">Cabinda</option>
                              <option value="">Bengo</option>
                            </select>
                          </div>
                          <div class="col-8 mt-3 mb-2 mt-md-0 align-items-center">
                            <div class="text-center col-12"><button type="submit">Pesquisar</button></div>
                          </div>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
