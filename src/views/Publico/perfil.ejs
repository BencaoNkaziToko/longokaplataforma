              </div>

              <!-- ======= Pricing Section ======= -->
              <section id="pricing" class="pricing" style="max-height: 400px; overflow: auto">
                <div class="container" data-aos="fade-up">
                  <table class="table text-primary table-responsive table-hover">
                    <thead class="bg-dark">
                      <th>NOME</th>
                      <th>DURAÇÃO</th>
                      <th>GRADE CURRICULAR</th>
                    </thead>
                    <tbody>
                      <% let verifica = "vazio" %>
                      <% instituicao.forEach((inst) => { %>
                        <% verifica = inst.gradeCurricular %>
                        <tr>
                          <td><%= inst.nome %></td>
                          <td><%= inst.duracao %> ANOS</td>
                          <td>
                            <% if (verifica === "null" || verifica === "") { %>
                              <p style="color: red;">Indisponível</p>
                            <% } else { %>
                              <a href="../uploads/<%= inst.gradeCurricular %>" download="<%= instituicao[0].nomeInstituicao %>_<%= instituicao[0].nome %>.pdf" class="">Baixar grade</a>
                            <% } %>
                          </td>
                        </tr>
                      <% }) %>    
                    </tbody>
                  </table>
                </div>
              </section>
            </div>
          </div><!-- End Tab Content 1 -->

